<h1>Hello, Rails!</h1>
<%= link_to 'My Blog', controller: 'articles' %>
<table>
  <%= link_to 'New article', new_article_path %>
  <tr>
    
    <p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>
 
<p>
  <strong>Text:</strong>
  <%= @article.text %>
</p>
 
<%= link_to 'Back', articles_path %>
 
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
    </tr>
  <% end %>
</table>